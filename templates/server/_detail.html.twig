{% embed "embeds/card.html.twig" %}
    {% block card_css_class %}mb-4{% endblock %}

    {% block card_header_css_class %}d-flex justify-content-between align-items-center{% endblock %}

    {% block card_title %}{{ title }}{% endblock %}

    {% block card_header_options %}
        <div>
            {% if showButton is defined and showButton == true %}
                <a class="btn btn-primary btn-sm active"
                   data-action="page#showFormContent"
                   href="{{ path('server_new') }}"
                >
                    <i class="fas fa-plus"></i>
                    Nueva
                </a>
            {% endif %}
        </div>
    {% endblock %}

    {% block card_body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Marca:</th>
                        <td>{{ server.brand }}</td>
                    </tr>
                    <tr>
                        <th>IP</th>
                        <td>{{ server.ip }}</td>
                    </tr>
                    <tr>
                        <th>Dirección física:</th>
                        <td>{{ server.physicalAddress }}</td>
                    </tr>
                    <tr>
                        <th>Número de serie físico:</th>
                        <td>{{ server.physicalSerial }}</td>
                    </tr>
                    <tr>
                        <th>Modelo:</th>
                        <td>{{ server.model }}</td>
                    </tr>
                    <tr>
                        <th>Número de inventario:</th>
                        <td>{{ server.inventory }}</td>
                    </tr>
                    <tr>
                        <th>Contic:</th>
                        <td>{{ server.contic }}</td>
                    </tr>
                    <tr>
                        <th>Estado</th>
                        <td>
                            {% if server.isActive() %}
                                <span class="badge text-bg-success">Activo</span>
                            {% else %}
                                <span class="badge text-bg-danger">Inactivo</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block card_footer %}
        {% if showButton is defined and showButton == true %}
            <div class="card-footer text-body-secondary">
                <div class="row">
                    <div class="col-6">
                        <a href="{{ path('server_index') }}" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i>
                            Listado
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="{{ path('server_edit', {'id': server.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                            Editar
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}
{% endembed %}
