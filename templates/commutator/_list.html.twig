{% embed "embeds/card.html.twig" %}
    {% block card_css_class %}mb-4{% endblock %}

    {% block card_header_css_class %}d-flex justify-content-between align-items-center{% endblock %}

    {% block card_title %}Listado de switchs{% endblock %}

    {% block card_header_options %}
        <div>
            <a class="btn btn-primary btn-sm active"
               data-action="page#showFormContent"
               href="{{ path('app_crud_commutator_new') }}"
            >
                <i class="fas fa-plus"></i>
                Nuevo
            </a>
        </div>
    {% endblock %}

    {% block card_body %}
        {% embed "embeds/table.html.twig" %}
            {% block table_container %}
                {# se puede poner el data-action #}
            {% endblock %}

            {% block table_head %}
                <tr>
                    <th>Ip</th>
                    <th>Puerta de enlace</th>
                    <th>Multicast</th>
                    <th>State</th>
                    <th>PortsAmount</th>
                    <th>Provincia</th>
                    <th>Municipio</th>
{#                    <th>Brand</th>#}
{#                    <th>PhysicalAddress</th>#}
{#                    <th>PhysicalSerial</th>#}
{#                    <th>Model</th>#}
{#                    <th>Inventory</th>#}
{#                    <th>Contic</th>#}

                    <th></th>
                </tr>
            {% endblock %}

            {% block table_body %}
                {% for commutator in paginator.getData() %}
                    <tr>
                        <td>{{ commutator.ip }}</td>
                        <td>{{ commutator.gateway }}</td>
                        <td>{{ commutator.multicast }}</td>
                        <td>
                            {% if commutator.state.value == 1 %}
                                <span class="badge text-bg-success">Activo</span>
                            {% else %}
                                <span class="badge text-bg-danger">Inactivo</span>
                            {% endif %}

                        </td>
                        <td>{{ commutator.portsAmount }}</td>
                        <td>{{ commutator.municipality.name }}</td>
                        <td>{{ commutator.municipality.province.name }}</td>
{#                        <td>{{ commutator.brand }}</td>    #}
{#                        <td>{{ commutator.physicalSerial }}</td>#}
{#                        <td>{{ commutator.model }}</td>#}
{#                        <td>{{ commutator.inventory }}</td>#}
{#                        <td>{{ commutator.contic }}</td>                        #}
                        <td>
                            <a class="btn btn-sm btn-primary" href="{{ path('app_crud_commutator_show', {'id': commutator.id}) }}" data-action="page#showFormContent">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" href="{{ path('app_crud_commutator_edit', {'id': commutator.id}) }}" data-action="page#showFormContent">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" href="{{ path('app_crud_commutator_edit', {'id': commutator.id}) }}">
                                <i class="fas fa-server"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="13">No se encontraron switchs</td>
                    </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}



