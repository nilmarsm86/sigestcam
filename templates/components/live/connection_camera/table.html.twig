<div {{ attributes }} style="position: relative">
    {% if port is not null or modem is not null %}
        {% embed "embeds/async_table.html.twig" %}
{#            {% block table_filter %}#}
{#                {% if port.hasConnectedCamera() %}#}
{#                    readonly#}
{#                {% endif %}#}
{#            {% endblock %}#}

            {% block table_head %}
                <tr>
                    <th>Ip</th>
{#                    <th>Número de inventario</th>#}
{#                    <th>Dirección física</th>#}
                    <th>Marca</th>
                    <th>Modelo</th>
{#                    <th>Contic</th>#}
{#                    <th>Serie</th>#}
                    <th>Estado</th>
                    <th>Provincia</th>
                    <th>Municipio</th>
                    <th></th>
                </tr>
            {% endblock %}

            {% block table_body %}
                {% for camera in paginator.getData() %}
                    <tr>
                        <td>{{ camera.ip }}</td>
                        <td>{{ camera.brand }}</td>
                        <td>{{ camera.model }}</td>
                        <td>
                            {% if camera.state == "1"  %}
                                <span class="badge text-bg-success">Activo</span>
                            {% else %}
                                <span class="badge text-bg-danger">Inactivo</span>
                            {% endif %}
                        </td>
                        <td>{{ camera.municipality.province.name }}</td>
                        <td>{{ camera.municipality.name }}</td>

{#                        <td>{{ camera.contic }}</td>#}
{#                        <td>{{ camera.physicalSerial }}</td>#}
                        <td>
                            <button title="Detalle de la cámara"
                                    type="button"
                                    class="btn btn-primary btn-sm"
                                    aria-current="page"
                                    {% if entityId is not same as camera.id %}
                                        data-action="live#action"
                                        data-action-name="prevent|detail(entityId={{ camera.id }})"
                                    {% endif %}
                            >
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">
                            No se encontraron registros
                        </td>
                    </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}
        <backdrop-component data-loading="addClass(d-block)" class="card-backdrop"></backdrop-component>
    {% endif %}
</div>