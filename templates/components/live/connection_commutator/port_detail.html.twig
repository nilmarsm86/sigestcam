<div class="col-3 mb-4" {{ attributes }}>
    <div class="card text-white {{ port.connection }} {% if selected %}shadow-lg border-danger{% endif %}" >
        <div class="card-body" style="padding: 0.5rem">
            <div
                    class="row align-items-center no-gutters"
                    {% if port.equipment is null and active and selected == false %}
                        data-action="dblclick->live#action"
                        data-action-name="select(port={{ port.id }})"
                    {% endif %}
            >
                <div class="col-auto">
                    <i class="fas {% if port.equipment %}fa-check-circle{% else %}fa-circle{% endif %} fa-2x text-gray-300"></i>
{#                    <i data-loading="show" class="fas fa-sync fa-2x text-gray-300"></i>#}
                    <div class="form-check form-switch">
                        <input
                                class="form-check-input"
                                type="checkbox"
                                role="switch"
                                {% if active %}checked{% endif %}
                                data-action="change->live#action"
                                {% if active %}
                                    data-action-name="deactivate(port={{ port.id }})"
                                {% else %}
                                    data-action-name="activate(port={{ port.id }})"
                                {% endif %}
                        >
                    </div>
                </div>
                <div class="col me-2">
                    <div class="text-uppercase text-white fw-bold text-xs mb-1">
                        {% if isEditing %}
                            <input
                                    type="text"
                                    data-model="norender|data"
                                    class="w-25"
                                    data-action="blur->live#action change->live#action"
                                    data-action-name="save(port={{ port.id }})"
                            >
                        {% else %}
                            <span
                                    class="w-25 d-inline-block"
                                    data-action="click->live#action"
                                    data-action-name="activateEditing()"
                                    style="cursor: pointer"
                            >
                                {{ data }}
                            </span>
                        {% endif %}
                        <span>mb/s - {{ port.equipment }}</span>
                    </div>
                    <div class="text-white fw-bold h5 mb-0"><span>Puerto: {{ port.number }}</span></div>
                </div>
            </div>
        </div>
    </div>
</div>