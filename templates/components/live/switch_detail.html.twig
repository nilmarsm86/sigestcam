<div class="col-4" {{ attributes }}>
    <h4>Características del switch:</h4>
    <hr>
    <div class="card text-bg-info border-primary">
        <div class="card-header text-bg-info d-flex justify-content-between align-items-center">
            <p class="text-white m-0 fw-bold">Detalles:</p>
            <div>
                <div class="form-check form-switch">
                    <input
                            class="form-check-input"
                            type="checkbox"
                            role="switch"
                            {% if commutator.state %}checked{% endif %}
                            data-action="change->live#action"
                            {% if commutator.state %}
                                data-action-name="deactivate(commutator={{ commutator.id }})"
                            {% else %}
                                data-action-name="activate(commutator={{ commutator.id }})"
                            {% endif %}
                    >
                </div>
            </div>
        </div>

        {{ component('SwitchDetailEditInline', {
            label: 'IP:',
            data: commutator.ip,
            id: commutator.id,
            setter: 'setIp',
            constraints: [
                {'class': 'NotBlank', 'options': {message:'Establezca el IP del equipo.'}},
                {'class': 'Ip', 'options': {message:'Establezca un IP válido.'}}
            ]
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Gateway:',
            data: commutator.gateway,
            id: commutator.id,
            setter: 'setGateway',
            constraints: [
                {'class': 'NotBlank', 'options': {message:'Establezca el IP gateway del equipo.'}},
                {'class': 'Ip', 'options': {message:'Establezca un IP gateway válido.'}}
            ]
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Inventario:',
            data: commutator.inventary,
            id: commutator.id,
            setter: 'setInventory',
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Dirección física:',
            data: commutator.physical_address,
            id: commutator.id,
            setter: 'setPhysicalAddress',
            constraints: [
                {'class': 'NotBlank', 'options': {message:'La dirección física no debe estar vacía.'}}
            ]
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Marca:',
            data: commutator.brand,
            id: commutator.id,
            setter: 'setBrand',
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Modelo:',
            data: commutator.model,
            id: commutator.id,
            setter: 'setModel',
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Contic:',
            data: commutator.contic,
            id: commutator.id,
            setter: 'setContic',
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Serie:',
            data: commutator.serial,
            id: commutator.id,
            setter: 'setPhysicalSerial',
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Provincia:',
            data: commutator.province,
            id: commutator.id,
            editable: false
        }) }}

        {{ component('SwitchDetailEditInline', {
            label: 'Municipio:',
            data: commutator.municipality,
            last: true,
            id: commutator.id,
            editable: false
        }) }}

        <backdrop-component data-loading="addClass(d-block)" style="display: none;position: absolute;width: 100%;height: 100%;"></backdrop-component>
    </div>
</div>