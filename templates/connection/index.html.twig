{% extends 'content.html.twig' %}

{% block title %}Conexiones{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-8">
            <h3 class="text-dark mb-4">Conexiones</h3>
        </div>
        {{ component('Breadcrumb', {
            options: [
                {label: 'Inicio', href: path('app_home')},
                {label: 'Conexiones'},
            ],
            current: 'Conexiones'
        }) }}
    </div>

    <div class="row">
        {{ component('ConnectionCard', {
            title: 'Conexión directa',
            totalAmount: total_amount_connections,
            connection: constant('App\\Entity\\Enums\\ConnectionType::Direct'),
            options:  [
                {label: 'Nueva', href: path('connection_direct_new'), icon: 'fa-plus'},
                {label: 'Listado', href: path('connection_direct_list'), icon: 'fa-list'}
            ],
            components: ['Switch', 'Cámara'],
        }) }}

        {{ component('ConnectionCard', {
            title: 'Conexión simple',
            totalAmount: total_amount_connections,
            connection: constant('App\\Entity\\Enums\\ConnectionType::Simple'),
            options:  [
                {label: 'Nueva', href:'', icon: 'fa-plus'},
                {label: 'Listado', href: '', icon: 'fa-list'}
            ],
            components: ['Switch', 'Modem', 'Cámara'],
        }) }}

        {{ component('ConnectionCard', {
            title: 'Conexión Switch esclavo',
            totalAmount: total_amount_connections,
            connection: constant('App\\Entity\\Enums\\ConnectionType::SlaveSwitch'),
            options:  [
                {label: 'Nueva', href:'', icon: 'fa-plus'},
                {label: 'Listado', href: '', icon: 'fa-list'}
            ],
            components: ['Switch', 'Switch esclavo', 'Cámara'],
        }) }}

        {{ component('ConnectionCard', {
            title: 'Conexión Modem esclavo',
            totalAmount: total_amount_connections,
            connection: constant('App\\Entity\\Enums\\ConnectionType::SlaveModem'),
            options:  [
                {label: 'Nueva', href:'', icon: 'fa-plus'},
                {label: 'Listado', href: '', icon: 'fa-list'}
            ],
            components: ['Switch', 'Modem', 'Modem esclavo', 'Cámara'],
        }) }}

        {{ component('ConnectionCard', {
            title: 'Conexión completa',
            totalAmount: total_amount_connections,
            connection: constant('App\\Entity\\Enums\\ConnectionType::Full'),
            options:  [
                {label: 'Nueva', href:'', icon: 'fa-plus'},
                {label: 'Listado', href: '', icon: 'fa-list'}
            ],
            components: ['Switch', 'Msam', 'Modem', 'Cámara'],
        }) }}

        <div class="col-md-6 col-xl-9 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="text-primary fw-bold m-0">Comparaciones</h6>
                </div>
                <div class="card-body">
                    <h4 class="small fw-bold">Server migration<span class="float-end">20%</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-primary" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;"><span class="visually-hidden">20%</span></div>
                    </div>
                    <h4 class="small fw-bold">Sales tracking<span class="float-end">40%</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-success" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;"><span class="visually-hidden">40%</span></div>
                    </div>
                    <h4 class="small fw-bold">Customer Database<span class="float-end">60%</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-info" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"><span class="visually-hidden">60%</span></div>
                    </div>
                    <h4 class="small fw-bold">Payout Details<span class="float-end">80%</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-warning" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%;"><span class="visually-hidden">80%</span></div>
                    </div>
                    <h4 class="small fw-bold">Account setup<span class="float-end">Complete!</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-danger" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"><span class="visually-hidden">100%</span></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
